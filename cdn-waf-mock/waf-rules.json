{
  "name": "OpenEdX-WAF-Rules",
  "description": "Web Application Firewall configuration for OpenEdX deployment",
  "provider": "AWS WAF",
  "environment": "production",
  "rules": [
    {
      "name": "RateLimitRule",
      "priority": 1,
      "action": "BLOCK",
      "statement": {
        "rate_based_statement": {
          "limit": 2000,
          "aggregate_key_type": "IP",
          "scope_down_statement": {
            "byte_match_statement": {
              "search_string": "/api/",
              "field_to_match": {
                "uri_path": {}
              },
              "text_transformations": [
                {
                  "priority": 0,
                  "type": "NONE"
                }
              ],
              "positional_constraint": "STARTS_WITH"
            }
          }
        }
      },
      "visibility_config": {
        "sampled_requests_enabled": true,
        "cloudwatch_metrics_enabled": true,
        "metric_name": "RateLimitRule"
      }
    },
    {
      "name": "SQLInjectionRule",
      "priority": 2,
      "action": "BLOCK",
      "statement": {
        "sqli_match_statement": {
          "field_to_match": {
            "all_query_arguments": {}
          },
          "text_transformations": [
            {
              "priority": 1,
              "type": "URL_DECODE"
            },
            {
              "priority": 2,
              "type": "HTML_ENTITY_DECODE"
            }
          ]
        }
      },
      "visibility_config": {
        "sampled_requests_enabled": true,
        "cloudwatch_metrics_enabled": true,
        "metric_name": "SQLInjectionRule"
      }
    },
    {
      "name": "XSSRule",
      "priority": 3,
      "action": "BLOCK",
      "statement": {
        "xss_match_statement": {
          "field_to_match": {
            "body": {}
          },
          "text_transformations": [
            {
              "priority": 1,
              "type": "URL_DECODE"
            }
          ]
        }
      },
      "visibility_config": {
        "sampled_requests_enabled": true,
        "cloudwatch_metrics_enabled": true,
        "metric_name": "XSSRule"
      }
    },
    {
      "name": "BadBotsRule",
      "priority": 4,
      "action": "BLOCK",
      "statement": {
        "or_statement": {
          "statements": [
            {
              "byte_match_statement": {
                "search_string": "bot",
                "field_to_match": {
                  "single_header": {
                    "name": "user-agent"
                  }
                },
                "text_transformations": [
                  {
                    "priority": 0,
                    "type": "LOWERCASE"
                  }
                ],
                "positional_constraint": "CONTAINS"
              }
            },
            {
              "byte_match_statement": {
                "search_string": "crawler",
                "field_to_match": {
                  "single_header": {
                    "name": "user-agent"
                  }
                },
                "text_transformations": [
                  {
                    "priority": 0,
                    "type": "LOWERCASE"
                  }
                ],
                "positional_constraint": "CONTAINS"
              }
            }
          ]
        }
      },
      "visibility_config": {
        "sampled_requests_enabled": true,
        "cloudwatch_metrics_enabled": true,
        "metric_name": "BadBotsRule"
      }
    },
    {
      "name": "OpenEdX-AdminProtection",
      "priority": 5,
      "action": "BLOCK",
      "statement": {
        "byte_match_statement": {
          "search_string": "/admin/",
          "field_to_match": {
            "uri_path": {}
          },
          "text_transformations": [
            {
              "priority": 0,
              "type": "LOWERCASE"
            }
          ],
          "positional_constraint": "CONTAINS"
        }
      },
      "visibility_config": {
        "sampled_requests_enabled": true,
        "cloudwatch_metrics_enabled": true,
        "metric_name": "AdminProtectionRule"
      }
    }
  ],
  "cloudfront_configuration": {
    "cdn_provider": "AWS CloudFront",
    "distribution_id": "E123456789ABCD",
    "origin": {
      "domain_name": "alb-openedx-123456789.us-east-1.elb.amazonaws.com",
      "origin_path": "",
      "protocol_policy": "https-only"
    },
    "cache_behavior": {
      "path_pattern": "*.css|*.js|*.png|*.jpg|*.jpeg|*.gif|*.svg|*.woff|*.woff2",
      "ttl": 86400,
      "compress": true
    },
    "ssl_certificate": "arn:aws:acm:us-east-1:123456789012:certificate/abc123-def456",
    "price_class": "PriceClass_200"
  },
  "monitoring": {
    "cloudwatch_metrics": true,
    "sns_alerts": true,
    "dashboard_url": "https://us-east-1.console.aws.amazon.com/cloudwatch/home"
  }
}
