{
  "waf_rules": [
    {
      "name": "rate_limit",
      "action": "block",
      "limit": "100 requests/minute"
    },
    {
      "name": "sql_injection",
      "action": "block",
      "patterns": ["' OR", "SELECT *", "DROP TABLE"]
    },
    {
      "name": "xss_protection", 
      "action": "block",
      "patterns": ["<script>", "javascript:"]
    }
  ],
  "cdn_config": {
    "provider": "AWS CloudFront",
    "static_files": ["*.css", "*.js", "*.png", "*.jpg"],
    "cache_time": "24 hours"
  }
}
